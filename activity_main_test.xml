<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingStart="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingEnd="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="밀레니엄 센터 내부"
        android:scaleType="centerCrop"
        android:src="@drawable/mill_bg3"
        />

    <!-- 버튼(좌) -->
    <include
        android:id="@+id/restart_button"
        layout="@layout/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="600dp"
        />

    <!-- 버튼(우) -->
    <include
        android:id="@+id/pt_table_button"
        layout="@layout/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="600dp"
        />

    <!-- 버튼(상단) -->
    <include
        android:id="@+id/title_button"
        layout="@layout/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />

    <!-- 게임판 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include
            layout="@layout/game_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            />
    </FrameLayout>

    <!-- 게임 결과창(오버레이) -->
    <include
        layout="@layout/end_table"
        android:id="@+id/overlay_end_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</RelativeLayout>