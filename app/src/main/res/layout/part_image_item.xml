<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/part_researchimage_imageview"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/part_researchimagetitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/part_researchimage_imageview"
        app:layout_constraintTop_toBottomOf="@id/part_researchimage_imageview" />

    <TextView
        android:id="@+id/part_researchimagedate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/part_researchimagetitle_textview"
        app:layout_constraintTop_toBottomOf="@id/part_researchimagetitle_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>