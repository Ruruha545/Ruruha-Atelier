<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sec_item_main_imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_sample1" />

    <ImageView
        android:id="@+id/sec_item_back_arrow_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/sec_item_main_imageView"
        app:layout_constraintTop_toTopOf="@+id/sec_item_main_imageView"
        app:srcCompat="@drawable/icon_back_tip_white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sec_item_title_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/sec_item_main_imageView">

        <View
            android:id="@+id/sec_item_title_user_alret_View"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_img_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sec_item_title_user_alret_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:text="매너온도"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/sec_item_title_user_alret_View"
            app:layout_constraintTop_toBottomOf="@id/sec_item_title_user_alret_View" />

        <TextView
            android:id="@+id/sec_item_title_user_celci_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="39.6℃"
            android:textColor="#0C9728"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/sec_item_title_user_alret_View"
            app:layout_constraintEnd_toStartOf="@id/sec_item_title_user_alret_View"
            app:layout_constraintTop_toTopOf="@id/sec_item_title_user_alret_View" />

        <ImageView
            android:id="@+id/sec_item_title_profile_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_img_circle"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/prf_user" />

        <TextView
            android:id="@+id/sec_item_title_name_textView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="이름입니다."
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sec_item_title_profile_imageView"
            app:layout_constraintTop_toTopOf="@+id/sec_item_title_profile_imageView" />

        <TextView
            android:id="@+id/sec_item_title_location_textView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="장소입니다."
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/sec_item_title_name_textView"
            app:layout_constraintTop_toBottomOf="@+id/sec_item_title_name_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/sec_item_border_View"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_marginTop="1dp"
        android:alpha="0.3"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sec_item_title_container" />

    <ScrollView
        android:id="@+id/sec_item_intro_container_outter"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/sec_item_border_View" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sec_item_intro_container_inner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sec_item_intro_title_textView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="제목입니다"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sec_item_intro_promotion_textView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="홍보글입니다."
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/sec_item_intro_title_textView"
                    app:layout_constraintTop_toBottomOf="@+id/sec_item_intro_title_textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sec_item_downside_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sec_item_intro_container_outter">

        <ImageView
            android:id="@+id/sec_item_intro_heart_imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_heart" />

        <View
            android:id="@+id/sec_item_intro_bar_View"
            android:layout_width="0.2dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:alpha="0.3"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/sec_item_intro_heart_imageView"
            app:layout_constraintStart_toEndOf="@+id/sec_item_intro_heart_imageView"
            app:layout_constraintTop_toTopOf="@+id/sec_item_intro_heart_imageView" />

        <TextView
            android:id="@+id/sec_item_intro_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="가격입니다."
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/sec_item_intro_heart_imageView"
            app:layout_constraintStart_toEndOf="@+id/sec_item_intro_heart_imageView"
            app:layout_constraintTop_toTopOf="@+id/sec_item_intro_heart_imageView" />

        <View
            android:id="@+id/sec_item_intro_button_View"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_img_btn_round"
            app:layout_constraintBottom_toBottomOf="@+id/sec_item_intro_price_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sec_item_intro_price_textView" />

        <TextView
            android:id="@+id/sec_item_intro_button_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/sec_item_intro_button_View"
            app:layout_constraintEnd_toEndOf="@+id/sec_item_intro_button_View"
            app:layout_constraintStart_toStartOf="@+id/sec_item_intro_button_View"
            app:layout_constraintTop_toTopOf="@+id/sec_item_intro_button_View" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/sec_donwside_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sec_item_downside_container" />

</androidx.constraintlayout.widget.ConstraintLayout>